<?xml version="1.0" encoding="UTF-8"?>
<FlowTest xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Verifies that priority is set to High for accounts with &gt;$1M revenue.</description>
    <flowApiName>Account_Set_Priority_to_High</flowApiName>
    <label>Account - High Revenue PASS</label>
    <testPoints>
        <elementApiName>Start</elementApiName>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordInitial</type>
            <value>
                <sobjectValue>{&quot;AnnualRevenue&quot;:&quot;2000000&quot;,&quot;Name&quot;:&quot;Test High Revenue Account&quot;,&quot;OwnerId&quot;:&quot;005Qy00000nhQbVIAU&quot;}</sobjectValue>
            </value>
        </parameters>
    </testPoints>
    <testPoints>
        <assertions>
            <conditions>
                <leftValueReference>$Record.CustomerPriority__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>High</stringValue>
                </rightValue>
            </conditions>
            <errorMessage>The Priority field was not set to High even though the Revenue exceeded $1M.</errorMessage>
        </assertions>
        <elementApiName>Finish</elementApiName>
    </testPoints>
</FlowTest>
